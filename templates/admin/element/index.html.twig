{% extends 'admin/layout/base_admin.html.twig' %}

{% block title %}Художники{% endblock %}

{% block header %}
    <div class="col-md-10 d-flex align-items-center justify-content-start">
        <h1><i class="fas fa-cogs"></i> Художники <small class="d-none d-lg-inline text-secondary"></small></h1>
    </div>
    <div class="col-md-2 d-flex align-items-center justify-content-end">
        <div class="dropdown create">
            <button id="element_new" class="btn btn-outline-light" type="button">
                <i class="fas fa-plus"></i> Добавить
            </button>
        </div>
    </div>
{% endblock %}

{% block body %}
    <table class="table table-hover datatable">
        <thead>
            <tr>
                <th width="1%"><i class="fas fa-file-image"></i></th>
                <th>Название</th>
                <th>Изображение</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td><img src="{{ asset(cardService.iconDir ~ element.image) }}" class="" alt="img"></td>
                <td>{{ element.name }}</td>
                <td>{{ element.image }}</td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', {'route': 'element_edit', 'id': element.id}) }}
                    {{ include('admin/layout/_delete_button.html.twig', {'route': 'element_delete', 'id': element.id}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
