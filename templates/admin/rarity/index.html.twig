{% extends 'admin/layout/base_admin.html.twig' %}

{% block title %}Художники{% endblock %}

{% block body %}
    {{ include('admin/layout/_header_block.html.twig', {'title': 'Редкости', 'id': 'rarity_new'}) }}

    <table class="table table-hover datatable">
        <thead>
            <tr>
                <th width="1%"><i class="fas fa-file-image"></i></th>
                <th>Название</th>
                <th>Изображение</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for rarity in rarities %}
            <tr>
                <td><img src="{{ asset(cardService.iconDir ~ rarity.image) }}" class="" alt="img"></td>
                <td>{{ rarity.name }}</td>
                <td>{{ rarity.image }}</td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', {'route': 'rarity_edit', 'id': rarity.id}) }}
                    {{ include('admin/layout/_delete_button.html.twig', {'route': 'rarity_delete', 'id': rarity.id}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
