{% extends 'admin/layout/base_admin.html.twig' %}

{% block title %}Художники{% endblock %}

{% block body %}
    {{ include('admin/layout/_header_block.html.twig', {'title': 'Типы', 'id': 'type_new'}) }}

    <table class="table table-hover datatable">
        <thead>
            <tr>
                <th>Название</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.name }}</td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', {'route': 'type_edit', 'id': type.id}) }}
                    {{ include('admin/layout/_delete_button.html.twig', {'route': 'type_delete', 'id': type.id}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
