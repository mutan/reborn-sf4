{% extends 'admin/layout/main_admin.html.twig' %}

{% block title %}Типы{% endblock %}

{% block body %}
<div class="content-heading">
    <div>Типы</div>
    <div class="ml-auto">
        <button id="type_new" class="btn btn-sm btn-purple" type="button">
            <i class="fas fa-plus"></i> Добавить
        </button>
    </div>
</div>
<div class="row">
    <div class="col-12">

        <table class="table table-hover datatable">
            <thead>
                <tr>
                    <th>Название</th>
                    <th width="1%">Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td>{{ type.name }}</td>
                    <td>
                        {{ include('admin/layout/_edit_button.html.twig', {'route': 'type_edit', 'id': type.id}) }}
                        {{ include('admin/layout/_delete_button.html.twig', {'route': 'type_delete', 'id': type.id}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Записей не найдено.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>
{% endblock %}
