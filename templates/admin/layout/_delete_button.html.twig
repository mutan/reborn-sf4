<form class="d-inline" method="post" action="{{ path(route, {'id': id}) }}" onsubmit="return confirm('Точно удалить?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-sm btn-secondary"><i class="fas fa-trash"></i></button>
</form>