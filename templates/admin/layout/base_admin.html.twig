<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Админка | {% block title %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('build/favicon.ico') }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('admin') }}"><i class="fas fa-tools mr-2"></i>Reborn • Админка</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsCollapse" aria-controls="navbarsCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown07" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown07">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">User <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-sign-out-alt"></i> Выйти</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <header id="header">
        <div class="container">
            <div class="row">
                {% block header %}{% endblock %}
            </div>
        </div>
    </header>

    <!-- Flash messages -->
    {% for label, messages in app.flashes %}
    <div class="container">
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {% if label == 'success' %}
                    <h4 class="alert-heading">Успешно</h4>
                    <hr>
                {% elseif label == 'warning' %}
                    <h4 class="alert-heading">Предупреждение</h4>
                    <hr>
                {% elseif label == 'danger' %}
                    <h4 class="alert-heading">Ошибка</h4>
                    <hr>
                {% endif %}
                {{ message }}
                <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    </div>
    {% endfor %}
    <!-- /Flash messages -->

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="list-group list-group-hover mb-3">
                        {% for item in menu_service.menu %}
                            <a href="{{ path(item.route) }}" class="list-group-item list-group-item-action d-flex {{ (app.request.attributes.get('_route') == item.route) ? 'active' : '' }}">
                                <div class="mr-auto">{% if item.icon %}<i class="{{ item.icon }}"></i>&nbsp;{% endif %}
                                    {{ item.label }}</div>
                                <div><span class="badge badge-pill {{ (app.request.attributes.get('_route') == item.route) ? 'badge-light' : 'badge-secondary' }}">{{ item.badge }}</span></div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-9">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </section>

    <!-- Modal: modalMain -->
    <div class="modal fade" id="mainModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div>
        </div>
    </div>
    <!-- Modal: modalMain -->

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
