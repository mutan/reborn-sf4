{% extends 'admin/layout/base_admin.html.twig' %}

{% block title %}Художники{% endblock %}

{% block body %}
    {{ include('admin/layout/_header_block.html.twig', {'title': 'Художники', 'id': 'artist_new'}) }}

    <table class="table table-hover datatable">
        <thead>
            <tr>
                <th>Имя</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.name }}</td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', {'route': 'artist_edit', 'id': artist.id}) }}
                    {{ include('admin/layout/_delete_button.html.twig', {'route': 'artist_delete', 'id': artist.id}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
