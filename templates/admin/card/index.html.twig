{% extends 'admin/layout/main_admin.html.twig' %}

{% block title %}Карты{% endblock %}

{% block body %}
<div class="content-heading">
    <div>Карты</div>
    <div class="ml-auto">
        <button id="card_new" class="btn btn-sm btn-purple" type="button">
            <i class="fas fa-plus"></i> Добавить
        </button>
    </div>
</div>
<div class="row">
    <div class="col-12">

    <table class="table table-hover table-responsive datatable">
        <thead>
            <tr>
                <th width="2%"><i class="fas fa-file-image"></i></th>
                <th width="1%">Номер</th>
                <th>Название</th>
                <th>Редкость</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td width="2%"><img src="{{ asset(cardService.imageDir ~ card.image) }}" class="img-fluid img-image-popover" data-toggle="image-popover" data-content="<img src='{{ asset(cardService.imageDir ~ card.image) }}' class='img-fluid'>"></td>
                <td>{{ card.number }}</td>
                <td>{{ card.name }}</td>
                <td><img src="{{ asset(cardService.iconDir ~ card.rarity.image) }}" class="img-fluid" alt=""></td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', {'route': 'card_edit', 'id': card.id}) }}
                    {{ include('admin/layout/_delete_button.html.twig', {'route': 'card_delete', 'id': card.id}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
</div>
{% endblock %}
