{% extends 'admin/layout/base_admin.html.twig' %}

{% block title %}Карты{% endblock %}

{% block header %}
    <div class="col-md-10 d-flex align-items-center justify-content-start">
        <h1><i class="fas fa-cogs"></i> Карты <small class="d-none d-lg-inline text-secondary"></small></h1>
    </div>
    <div class="col-md-2 d-flex align-items-center justify-content-end">
        <div class="dropdown create">
            <button id="card-new" class="btn btn-outline-light" type="button">
                <i class="fas fa-plus"></i> Добавить
            </button>
        </div>
    </div>
{% endblock %}

{% block body %}
    <table class="table table-hover table-responsive datatable">
        <thead>
            <tr>
                <th width="2%"><i class="fas fa-file-image"></i></th>
                <th width="1%">Номер</th>
                <th>Название</th>
                <th>Редкость</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td width="2%"><img src="{{ asset(cardService.imageDir ~ card.image) }}" class="img-fluid image-popover" alt="img" data-toggle="image-popover" data-content="<img src='{{ asset(cardService.imageDir ~ card.image) }}' class='img-fluid' alt='img'>"></td>
                <td>{{ card.number }}</td>
                <td>{{ card.name }}</td>
                <td><img src="{{ asset(cardService.iconDir ~ card.rarity.image) }}" class="img-fluid" alt="img"></td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', { 'route': 'card_edit', 'id': card.id}) }}
                    {{ include('admin/card/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
