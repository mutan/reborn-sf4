{% extends 'admin/layout/base_admin.html.twig' %}

{% block title %}Выпуски{% endblock %}

{% block header %}
    <div class="col-md-10 d-flex align-items-center justify-content-start">
        <h1><i class="fas fa-cogs"></i> Выпуски <small class="d-none d-lg-inline text-secondary"></small></h1>
    </div>
    <div class="col-md-2 d-flex align-items-center justify-content-end">
        <div class="dropdown create">
            <button id="edition_new" class="btn btn-outline-light" type="button">
                <i class="fas fa-plus"></i> Добавить
            </button>
        </div>
    </div>
{% endblock %}

{% block body %}
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th width="1%">Номер</th>
                <th>Код</th>
                <th><i class="fas fa-file-image"></i></th>
                <th>Название</th>
                <th>Изображение</th>
                <th>Кол-во карт</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for edition in editions %}
            <tr>
                <td>{{ edition.number }}</td>
                <td>{{ edition.code }}</td>
                <td><img src="{{ asset(cardService.iconDir ~ edition.image) }}" class="" alt="img"></td>
                <td>{{ edition.name }}</td>
                <td>{{ edition.image }}</td>
                <td>{{ edition.quantity }}</td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', {'route': 'edition_edit', 'id': edition.id}) }}
                    {{ include('admin/layout/_delete_button.html.twig', {'route': 'edition_delete', 'id': edition.id}) }}
                </td>
            </tr>
            <tr>
                <td></td>
                <td colspan="5" width="20%"><strong>Краткое описание:</strong> {{ edition.description }}</td>
                <td></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
