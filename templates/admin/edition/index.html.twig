{% extends 'admin/layout/base_admin.html.twig' %}

{% block title %}Выпуски{% endblock %}

{% block header %}
    <div class="col-md-10 d-flex align-items-center justify-content-start">
        <h1><i class="fas fa-cogs"></i> Выпуски <small class="d-none d-lg-inline text-secondary"></small></h1>
    </div>
    <div class="col-md-2 d-flex align-items-center justify-content-end">
        <div class="dropdown create">
            <button id="edition-new" class="btn btn-outline-light" type="button">
                <i class="fas fa-plus"></i> Добавить
            </button>
        </div>
    </div>
{% endblock %}

{% block body %}
    <table class="table table-hover datatable">
        <thead>
            <tr>
                <th width="1%">Id</th>
                <th>Name</th>
                <th width="1%">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edition in editions %}
            <tr>
                <td>{{ edition.id }}</td>
                <td>{{ edition.name }}</td>
                <td>
                    <a class="btn btn-sm btn-danger edition-edit" href="{{ path('edition_edit', {'id': edition.id}) }}" data-edition-id="{{ edition.id }}">
                        <i class="fas fa-edit"></i>
                    </a>
                    {{ include('admin/edition/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
