{% extends 'admin/layout/main_admin.html.twig' %}

{% block title %}Жидкости{% endblock %}

{% block body %}
<div class="content-heading">
    <div>Жидкости</div>
    <div class="ml-auto">
        <button id="liquid_new" class="btn btn-sm btn-purple" type="button">
            <i class="fas fa-plus"></i> Добавить
        </button>
    </div>
</div>
<div class="row">
    <div class="col-12">

    <table class="table table-hover datatable">
        <thead>
            <tr>
                <th width="1%"><i class="fas fa-file-image"></i></th>
                <th>Название</th>
                <th>Изображение</th>
                <th width="1%">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for liquid in liquids %}
            <tr>
                <td><img src="{{ asset(cardService.iconDir ~ liquid.image) }}" class="" alt="img"></td>
                <td>{{ liquid.name }}</td>
                <td>{{ liquid.image }}</td>
                <td>
                    {{ include('admin/layout/_edit_button.html.twig', {'route': 'liquid_edit', 'id': liquid.id}) }}
                    {{ include('admin/layout/_delete_button.html.twig', {'route': 'liquid_delete', 'id': liquid.id}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей не найдено.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
</div>
{% endblock %}
